<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBright"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vl_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@mipmap/p1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/vl_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[古典]四小天鹅舞"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="16dp"
                    />
                <Button
                    android:id="@+id/vl_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/enter"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/vl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorGray"
                android:text="3:04"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
